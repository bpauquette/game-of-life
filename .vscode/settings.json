{
    "sonarlint.connectedMode.project": {
        "connectionId": "http-localhost-9000",
        "projectKey": "game-of-life"
    },
    "chat.agent.maxRequests": 100,
    // Default to Git Bash but expose both Git Bash and WSL (Ubuntu) profiles
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "path": "C:/Program Files/Git/bin/bash.exe",
            "icon": "terminal-bash"
        },
        "WSL": {
            "path": "C:/Windows/system32/wsl.exe",
            "args": ["-e", "/bin/bash", "-l"],
            "icon": "terminal-ubuntu"
        }
    },
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/build/**": true,
        "**/dist/**": true,
        "**/coverage/**": true,
        "**/.git/**": true,
        "**/logs/**": true,
        "**/tmp/**": true,
        "**/temp/**": true,
        "**/*.log": true,
        "**/.cache/**": true,
        "**/target/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/build": true,
        "**/dist": true,
        "**/coverage": true,
        "**/logs": true,
        "**/tmp": true,
        "**/temp": true,
        "**/*.log": true,
        "**/.cache": true,
        "**/target": true
    },
    "files.exclude": {
        "**/coverage": true,
        "**/logs": true,
        "**/*.log": true,
        "**/tmp": true,
        "**/temp": true
    },
    "typescript.preferences.includePackageJsonAutoImports": "off",
    "typescript.suggest.autoImports": false,
    "files.watcherUsePolling": false,
    "github.copilot.chat.enabled": false
}