{
  "type": "module",
  "name": "game-of-life",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "better-sqlite3": "^12.6.2",
    "buffer": "^6.0.3",
    "jsdom": "^27.4.0",
    "jwt-decode": "^4.0.0",
    "monaco-editor": "^0.55.1",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.36.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-scripts": "^5.0.1",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^2.2.5",
    "validator": "^13.15.26",
    "web-vitals": "^5.1.0",
    "zustand": "^5.0.10"
  },
  "scripts": {
    "start": "react-scripts start",
    "build:version": "node ./scripts/write-version.cjs",
    "build": "npm run build:version && react-scripts build",
    "build:dev": "npm run build:version && BUILD_WITHOUT_MINIFICATION=true react-scripts build",
    "build:hashlife-worker": "npx esbuild src/model/hashlife/worker.esm.js --bundle --platform=browser --format=esm --outfile=public/model/hashlife/worker.thread.js",
    "test": "npm run build:version && cross-env CI=true NODE_OPTIONS='--no-deprecation=DEP0040' react-scripts test --watchAll=false",
    "test:coverage": "npm run build:version && cross-env CI=true NODE_OPTIONS='--no-deprecation=DEP0040' react-scripts test --watchAll=false --coverage",
    "frontend:start": "node ./scripts/manage.js start",
    "frontend:stop": "node ./scripts/manage.js stop",
    "frontend:status": "node ./scripts/manage.js status",
    "backend:start": "node ./backend/scripts/manage.js start",
    "backend:stop": "node ./backend/scripts/manage.js stop",
    "backend:status": "node ./backend/scripts/manage.js status",
    "eject": "react-scripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapper": {
      "^jsonwebtoken$": "<rootDir>/src/__mocks__/jsonwebtoken.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:55000",
  "lint-staged": {
    "src/**/*.{js,jsx}": "eslint --fix --max-warnings=0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.6",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.28.5",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^10.1.0",
    "crypto-browserify": "^3.12.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  }
}
